<Application x:Class="GoRadio.DesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GoRadio.DesktopApp"
             xmlns:viewModel="clr-namespace:GoRadio.DesktopApp.ViewModel"
             xmlns:view="clr-namespace:GoRadio.DesktopApp.View">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:SoundboardViewModel}">
                <view:SoundboardUserControl/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SettingsViewModel}">
                <view:SettingsUserControl/>
            </DataTemplate>
        </ResourceDictionary>
        
        
    </Application.Resources>
</Application>
